<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_alignParentBottom="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/t_3"
        android:alpha="0.5"
        android:layout_marginBottom="65dp"
        android:background="@color/color_grey_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/t_10">
        <LinearLayout
            android:id="@+id/layoutHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/t_5"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic__home"/>
            <TextView
                android:id="@+id/tvHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/navigo_light"
                android:layout_gravity="center"
                android:text="Home"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/t_5"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivBooking"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/booking_bottom"/>
            <TextView
                android:id="@+id/tvBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/navigo_light"
                android:layout_gravity="center"
                android:text="Bookings"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/t_5"
            android:visibility="invisible"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_user"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/navigo_light"
                android:layout_gravity="center"
                android:text="Guests"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutInbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/t_5"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivMessage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_message"/>
            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/navigo_light"
                android:layout_gravity="center"
                android:text="Inbox"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/t_5"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_user"/>
            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/navigo_light"
                android:layout_gravity="center"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/layoutAdd"
        android:layout_width="@dimen/t_50"
        android:layout_height="@dimen/t_50"
        app:cardCornerRadius="@dimen/t_50"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic__add"
            app:tint="@color/white" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>