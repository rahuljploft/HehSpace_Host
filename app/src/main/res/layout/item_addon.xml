<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="viewmodel"
            type="com.hehspace_host.model.AdditionalSeviceModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/t_15">

            <EditText
                android:id="@+id/etServiceName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@drawable/et_bg_one"
                android:fontFamily="@font/navigo_light"
                android:gravity="center"
                android:hint="Service Title"
                android:capitalize="words"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etServicePrice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/et_bg_one"
                android:fontFamily="@font/navigo_light"
                android:gravity="center"
                android:hint="$ Price"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/iconRemove"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_remove" />
        </LinearLayout>


    </LinearLayout>
</layout>
